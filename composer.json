{
    "name": "crazywhalecc/static-php-cli",
    "description": "Build single static PHP binary, with PHP project together, with popular extensions included.",
    "license": "MIT",
    "authors": [
        {
            "name": "jerry",
            "email": "admin@zhamao.me"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "laravel/prompts": "^0.1.3",
        "symfony/console": "^6 || ^5 || ^4",
        "zhamao/logger": "^1.0"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.10",
        "captainhook/plugin-composer": "^5.3",
        "friendsofphp/php-cs-fixer": "^3.2 != 3.7.0",
        "nunomaduro/collision": "*",
        "phpstan/phpstan": "^1.1",
        "phpunit/phpunit": "^10.3"
    },
    "autoload": {
        "psr-4": {
            "SPC\\": "src/SPC"
        },
        "files": [
            "src/globals/defines.php",
            "src/globals/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SPC\\Tests\\": "tests/SPC"
        }
    },
    "bin": [
        "bin/spc"
    ],
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 300M",
        "cs-fix": "php-cs-fixer fix",
        "test": "vendor/bin/phpunit tests/ --no-coverage"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "captainhook/plugin-composer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
